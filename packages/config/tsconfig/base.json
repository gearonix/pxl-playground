{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "ES2020",
    "strict": true,
    "module": "esnext",
    "lib": ["es2020", "DOM"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true
  }
}
